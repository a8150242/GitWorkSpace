            text-align: center;

            line-height: 80px;

            margin-bottom: 10px;

            color: White;

            font-size: 20px;

            filter: progid:DXImageTransform.Microsoft.Gradient(startColorStr='#1d162c', endColorStr='#192430', gradientType='1');

            background: -moz-linear-gradient(top, #1d162c, #192430);

            background: -o-linear-gradient(top, #1d162c, #192430);

            background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#1d162c), to(#192430));

        }

