            background: -moz-linear-gradient(left, #1d162c, #192430);

            background: -o-linear-gradient(left, #1d162c, #192430);

            background: -webkit-gradient(linear, 0% 0%, 100% 0%, from(#1d162c), to(#192430));

        }

